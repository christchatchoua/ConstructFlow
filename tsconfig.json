{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true, // Allow JavaScript files
    "checkJs": false, // Disable type-checking for JavaScript files
    "jsx": "react-native", // Enable JSX for React Native
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js", // Include JavaScript files
    "**/*.jsx", // Include JSX files
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
